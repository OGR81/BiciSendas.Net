@model List<BiciSendas.Areas.Operaciones.Models.ElementosVias.ElementoViaGridVM>
@using NonFactors.Mvc.Grid

@{
    @(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Id).Hidden();
                columns.Add(model => model.Nombre);
                columns.Add(model => "<button class='btnRemove btn btn-primary fa-solid fa-trash' data-nombre=\"" + model.Nombre + "\" data-id=\"" + model.Id + "\">").Width(20).Encoded(false).Css("text-center").AsAttributes();
            })
            .Using(GridFilterMode.Header)
            .Empty("No data found")
            .Pageable(pager =>
            {
                pager.PageSizes = new Dictionary<Int32, String> { { 0, "Todo" }, { 5, "5" }, { 10, "10" }, {20, "20"} };
                pager.ShowPageSizes = true;
                pager.PagesToDisplay = 3;
                pager.CurrentPage = 1;
                pager.RowsPerPage = 5;
            })
            .Sortable()
            .Css("css-classes") // Overwrites all classes with the new ones
            .AppendCss("table-hover") // Appends classes to the current ones
        )
}

