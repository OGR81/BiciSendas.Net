@using BiciSendas.Recursos
@model BiciSendas.Areas.Operaciones.Models.Actuadores.ActuadorIndexVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Actuadores";
        
    <div class="container d-flex flex-column">
    <div class="row">
            <div class="col-lg-1 mt-auto ps-0">
                @Html.DropDownListFor(m => m.NumPagina, Model.Paginas, new {@class="form-select"})
            </div>
            <div class="col-lg-2">
                @Html.LabelFor(m => m.IdTipoActuador, null, new { @class="col-form-label"})
                @Html.DropDownListFor(m => m.IdTipoActuador, Model.TipoActuador, new{ @class="form-select"})
            </div>
            <div class="col mt-auto d-md-flex justify-content-md-end pe-0">
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalActuador"><i class="fa-solid fa-plus"></i> Nuevo</button>
            </div>
        </div>
    </div>
        
    <div id="ListaActuadores" class="col-xs-12 mt-4">
        <table class="table">
          <thead class="table-dark">
            <tr>
              <th scope="col" style="font-size:smaller">@ActuadorStrings.Identificador</th>
              <th scope="col" style="font-size:smaller">@ActuadorStrings.Nombre</th>
              <th scope="col" style="font-size:smaller">@ActuadorStrings.TipoActuador</th>
              <th scope="col" style="font-size:smaller">@ActuadorStrings.FechaModificacion</th>
              <th scope="col" style="font-size:smaller">@ActuadorStrings.Opciones</th>
            </tr>
          </thead>
          <tbody>
            <tr>
         
            </tr>
          </tbody>
        </table>
        <a asp-action="Index" class="btn btn-outline-secondary" role="button">Anterior</a>
        <a asp-action="Index" class="btn btn-outline-secondary" role="button">Siguiente</a>
    </div>
    <div class="modal fade" id="modalActuador" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">@ActuadorStrings.Actuador</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
                
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-success">@ActuadorStrings.Enviar</button>
          </div>
        </div>
      </div>
    </div>
}
